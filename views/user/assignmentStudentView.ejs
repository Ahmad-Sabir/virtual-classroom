<!-- include head -->
<%- include('../head'); %>
    <!-- include header -->
    <%- include('../header'); %>
        <script>
            let user = {}
            user.userId = '<%= locals.user._id %>'
            user.userName = '<%= locals.user.firstName +" "+ locals.user.lastName %>'
            user.photo = '<%= locals.user.photo %>'
        </script>
        <div class="page-wrapper chiller-theme" style="background-color: #2c2b2b;">
            <%- include('../sidebar'); %>
                <!-- sidebar-wrapper  -->
                <main class="page-content">
                    <div class="container-fluid bg-dark text-white" style="height:87vh;overflow-y:scroll;border-radius:5px;margin-top:0px;">
                        <div class="row mb-4">
                            <div class="col-12">
                                <div class="row">
                                    <div class="col-12 ml-2">
                                        <h3>
                                            <%=assignment.title%>
                                        </h3>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-9 ">
                                        <div style="padding-top: 10px;margin-bottom: 30px;">
                                            <h4 style="font-size: 20px;">Instructions</h4>
                                            <span style="font-style: italic;">
                                                <%=assignment.description%>
                                            </span>
                                        </div>
                                    </div>
                                    <div class="col-3 ">
                                        <div style="padding-top: 20px;margin-bottom: 30px;">
                                            <span style="padding-bottom: 20px;">Due</span><br>
                                            <%if(assignment.dueDate){%>
                                                <p>
                                                    <%=new Date(assignment.dueDate).toDateString()%>
                                                        <%=new Date(assignment.dueDate).toLocaleTimeString()%>
                                                </p>
                                                <%} else{%>
                                                    <span>No due Date</span>
                                                    <%}%>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-9">
                                        <span style="font-size: 20px; ">Files</span><br>
                                        <%if(assignment.files.length>0){%>
                                            <%assignment.files.forEach(function(file){%>
                                                <a href="/files/assignmentFiles/<%=file%>"
                                                    style="background-color: rgb(26, 28, 31);color: aliceblue; padding:2px;" download>
                                                    <%=file%>&nbsp;<i class="far fa-download"></i>
                                                </a>
                                                <%})%>
                                                    <%} else{%>
                                                        <span>No files attached</span>
                                                    <%}%>
                                    </div>
                                    <div class="col-3">
                                        <span>Points</span>
                                        <%if(assignment.totalPoints){%>
                                            <p>
                                                <%=assignment.totalPoints%>
                                            </p>
                                            <%} else{%>
                                                <p>No Points</p>
                                                <%}%>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-12">
                                        <span style="font-size: 20px; ">My Work</span><br>
                                        <form class="submitAssignment mt-2">
                                            <div class="form-group">
                                                <input type="file" id="subUpload" name="subUpload"
                                                    style="border:none; margin-left:-30px" multiple>
                                            </div>
                                            <div class="form-group">
                                                <textarea class="form-control" rows="2" id="subDescription"
                                                    placeholder="Description" required></textarea>
                                            </div>
                                            <button type="submit" class="btn btn-primary">Submit</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </main>
        </div>
        <%- include('../footer'); %>