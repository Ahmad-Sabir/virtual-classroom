<%-include('head'); %>
    <section class="password-manage">
        <div class="row justify-content-center align-items-center">
            <div class="card shadow" style="width:400px">
                <div class="card-body">
                    <a class="text-center" href="/">
                        <h3><i class="fad fa-users-class"></i> Virtual Classroom</h3>
                    </a>
                    <hr>
                    <h2 class="form-title">Reset Password</h2>
                    <form class="form-reset-password">
                        <div class="form-group">
                            <label for="pass"><i class="fa fa-lock"></i></label>
                            <input type="password" name="pass" id="pass" placeholder="Password" required />
                        </div>
                        <div class="form-group">
                            <label for="re-pass"><i class="fa fa-lock-alt"></i></label>
                            <input type="password" name="re_pass" id="re_pass" placeholder="Repeat your password"
