<%- include('head'); %>
    <!-- include head -->
    <section class="sign-in">
        <div class="containerr shadow">
            <br>
            <a class="text-center" href="/">
                <h3><i class="fad fa-users-class"></i> Virtual Classroom</h3>
            </a>
            <div class="signin-content">
                <div class="signin-image">
                    <figure><img src="images/app/education.png" alt="sign in image"></figure>
                </div>
                <div class="signin-form">
                    <h2 class="form-title">Sign In</h2>
                    <form class='form-login'>
                        <div class="form-group">
                            <label for="email"><i class="fa fa-envelope"></i></label>
                            <input type="email" name="email" id="email" placeholder="Your Email" autofocus required />
                        </div>
                        <div class="form-group">
                            <label for="your_pass"><i class="fa fa-lock"></i></label>
                            <input type="password" name="pass" id="pass" placeholder="Password" required />

                        </div>

                        <a href="/forgotpassword" class="float-right">
                            Forgot Password?
                        </a>

                        <button class="btn btn-primary">Sign In</button>
                    </form>
                    <div class="no-account">
                        <span>Don't have account?<a href="/signup">Register</a></span>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- include footer-->
    <%- include('footer'); %>