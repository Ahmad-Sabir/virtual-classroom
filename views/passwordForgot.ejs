<%- include('head'); %>
    <section class="password-manage">

        <div class="row justify-content-center align-items-center">
            <div class="card shadow" style="width: 400px">
                <div class="card-body">
                    <a class="text-center" href="/">
                        <h3><i class="fad fa-users-class"></i> Virtual Classroom</h3>
                    </a>
                    <hr>
                    <h2 class="form-title">Forgot Password</h2>
                    <form class="form-forgot-password">
                        <div class="form-group">
                            <label for="email"><i class="fa fa-envelope"></i></label>
                            <input id="email" type="email" name="email" placeholder="Enter Your Email" required
                                autofocus>
                        </div>
                        <p class="form-text text-muted">
                            By clicking "submit" we will send a password reset link on your email
                        </p>

                        <div class="form-group m-0">
                            <button type="submit" class="btn btn-primary btn-block">
                                Submit
                            </button>
                        </div>
                    </form>
                    <br>
                    <a href="/login" class="float-left">
                        <i class="far fa-arrow-left"></i> Go back to login
                    </a>
                </div>
            </div>
    </section>
    <!-- include footer-->
    <%- include('footer'); %>