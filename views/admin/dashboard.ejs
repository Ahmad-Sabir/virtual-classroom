<!-- include head -->
<%- include('../head'); %>
    <!-- include header -->
    <%- include('../header'); %>
        <div class="page-wrapper chiller-theme">
            <%- include('../sidebar'); %>
                <!-- sidebar-wrapper  -->
                <main class="page-content">
                    <div class="container">
                        <div class="d-sm-flex justify-content-between align-items-center mb-4">
                            <h3 class="text-white mb-0 form-title">
                                <%=title%>
                            </h3>
                        </div>
                        <div class="row">
                            <div class="col-md-6 col-xl-3 mb-4">
                                <div class="card shadow border-left-primary py-2">
                                    <div class="card-body">
                                        <div class="row align-items-center no-gutters">
                                            <div class="col mr-2">
                                                <div class="text-uppercase text-primary font-weight-bold text-xs mb-1">
                                                    <span>Users</span>
                                                </div>
                                                <div class="text-dark font-weight-bold h5 mb-0">
                                                    <span id="users"></span>
                                                </div>
                                            </div>
                                            <div class="col-auto"><i class="fas fa-users fa-2x"></i></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 col-xl-3 mb-4">
                                <div class="card shadow border-left-success py-2">
                                    <div class="card-body">
                                        <div class="row align-items-center no-gutters">
                                            <div class="col mr-2">
                                                <div class="text-uppercase text-success font-weight-bold text-xs mb-1">
                                                    <span>Courses</span>
                                                </div>
                                                <div class="text-dark font-weight-bold h5 mb-0">
                                                    <span id="courses"></span>
                                                </div>
                                            </div>
                                            <div class="col-auto"><i class="fas fa-books fa-2x"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 col-xl-3 mb-4">
                                <div class="card shadow border-left-info py-2">
                                    <div class="card-body">
                                        <div class="row align-items-center no-gutters">
                                            <div class="col mr-2">
                                                <div class="text-uppercase text-info font-weight-bold text-xs mb-1">
                                                    <span>Visits</span>
                                                </div>
                                                <div class="text-dark font-weight-bold h5 mb-0">
                                                    <span id=traffic></span>
                                                </div>
                                            </div>
                                            <div class="col-auto"><i class="fal fa-eye fa-2x"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 col-xl-3 mb-4">
                                <div class="card shadow border-left-warning py-2">
                                    <div class="card-body">
                                        <div class="row align-items-center no-gutters">
                                            <div class="col mr-2">
                                                <div class="text-uppercase text-warning font-weight-bold text-xs mb-1">
                                                    <span>Admins</span>
                                                </div>
                                                <div class="text-dark font-weight-bold h5 mb-0"><span>
                                                        <%=admins.length%>
                                                    </span>
                                                </div>
                                            </div>
                                            <div class="col-auto"><i class="fas fa-user-shield fa-2x"></i></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-11 col-sm-12">
                                <div class="card shadow mb-4">
                                    <div class="card-header d-flex justify-content-between align-items-center">
                                        <h6 class="text-primary font-weight-bold m-0">30 Days Overview</h6>
                                    </div>
                                    <div class="card-body">
                                        <div class="chart-area">
                                            <canvas id='line-chart' height="100"></canvas>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </main>
                <!-- page-content" -->
        </div>
        <%- include('../footer'); %>