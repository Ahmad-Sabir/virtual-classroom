<%- include('head'); %>
    <!-- Sign up form -->
    <section class="signup">
        <div class="containerr shadow">
            <br>
            <a class="text-center" href="/">
                <h3><i class="fad fa-users-class"></i> Virtual Classroom</h3>
            </a>
            <div class="signup-content">
                <div class="signup-form">
                    <h2 class="form-title">Sign up</h2>
                    <form class="form-signup">
                        <div class="form-group">
                            <label for="fname"><i class="fa fa-user"></i></label>
                            <input type="text" name="fname" id="fname" placeholder="First Name" autofocus required />
                        </div>
                        <div class="form-group">
                            <label for="lname"><i class="fa fa-user"></i></label>
                            <input type="text" name="lname" id="lname" placeholder="Last Name" required />
                        </div>
                        <div class="form-group">
                            <label for="email"><i class="fa fa-envelope"></i></label>
                            <input type="email" name="email" id="email" placeholder="Your Email" required />
                        </div>
                        <div class="form-group">
                            <label for="pass"><i class="fa fa-lock"></i></label>
                            <input type="password" name="pass" id="pass" placeholder="Password" required />
                        </div>
                        <div class="form-group">
                            <label for="re-pass"><i class="fa fa-lock-alt"></i></label>
                            <input type="password" name="re_pass" id="re_pass" placeholder="Repeat your password"
                                required />
                        </div>
                        <br>
                        <a href="/login" class="float-right">
                            Sign in instead
                        </a>
                        <button type="submit" class="btn btn-primary btn-lg">Sign Up</button>
                    </form>
                </div>
                <div class="signup-image">
                    <figure><img src="images/app/signup-image.jpg" alt="sing up image"></figure>
                </div>
            </div>
        </div>
    </section>
    <!-- include footer-->
    <%- include('footer'); %>